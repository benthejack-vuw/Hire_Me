{
  "name": "let_me_grow_with_you_field",
  "version": "0.0.1",
  "description": "I'd love to work with you FIELD, your work is inspiring.",
  "main": "index.js",
  "scripts": {
    "dev": "webpack-dev-server --config webpack.config.dev.js --mode=development -d",
    "build": "run-s mkdirs compile",
    "compile": "run-p pack copy-www",
    "pack": "webpack --mode=production",
    "mkdirs": "mkdirp ./build && mkdirp ./build/assets && mkdirp ./build/scripts",
    "copy-www": "cpx 'www/assets/*.*' 'build/assets' && cpx ./www/index.css ./build && cpx ./www/index.html ./build --watch"
  },
  "author": "Ben Jack",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.1",
    "@babel/preset-env": "^7.0.0",
    "babel-loader": "^8.0.0-beta.6",
    "webpack": "^4.18.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.8",
    "cpx": "^1.5.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.3"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "babel-preset-env": "^1.7.0",
    "three": "^0.102.1"
  }
}
